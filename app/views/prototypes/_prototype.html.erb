<div class="prototype-card">
  <div class="prototype-image">
    <% if prototype.image.attached? %>
      <%= link_to image_tag(prototype.image), prototype_path(prototype) %>
    <% else %>
      <%= link_to "画像がありません", prototype_path(prototype) %>
    <% end %>
  </div>

  <div class="prototype-info">
    <h3><%= link_to prototype.title, prototype_path(prototype) %></h3>
    <p><%= prototype.catch_copy %></p>
    <p><%#= prototype.concept %></p>
    <p><%= link_to prototype.user.name, user_path(prototype.user), class: :prototype__user %></p>
  </div>
</div>